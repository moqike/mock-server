{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "downlevelIteration": true,
    "strict": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "mock_home/**/*",
    "dev/**/*",
    "test/**/*"
  ]
}